##test
pipeline {
    agent any
    tools {
        jdk 'myjdk'
        maven 'mymaven'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([
                 $class: 'GitSCM',
                 branches: [[name: 'main']],
                 userRemoteConfigs: [[
                    url: 'https://github.com/devopseng129/webhook-pipeline.git',
                    credentialsId: '',
                 ]]
                ])
            }
        }
        stage('clone') {
            steps {
                git url: 'https://github.com/devopseng129/webhook-pipeline.git'
            }
        }
        stage('compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('code_review') {
            steps {
                sh 'mvn -P metrics pmd:pmd'
            }
        }
        stage('unit_test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('metric_check') {
            steps{
                sh 'mvn cobertura:cobertura -D cobertura.report.format=xml'
            }
        }
        stage('package') {
            steps{
                sh 'mvn package'
            }
        }
    }
}
